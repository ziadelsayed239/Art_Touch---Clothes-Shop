@model List<DAL.Data.Models.Product>
@{
    ViewData["Title"] = "Products Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-content">
    <div class="content-header">
        <h1>Products Management</h1>
        <a href="@Url.Action("CreateProduct", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="content-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Sizes & Stock</th>
                            <th>Status</th>
                            <th>Badges</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>
                                    <div>
                                        <strong>@product.Name</strong>
                                        @if (!string.IsNullOrEmpty(product.Description))
                                        {
                                            <br />
                                            <small class="text-muted">@(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (product.Category != null)
                                    {
                                        <span class="badge badge-info">@product.Category.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No category</span>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <span class="text-decoration-line-through text-muted">$@product.OriginalPrice.ToString("F2")</span>
                                        @if (product.DiscountPrice.HasValue)
                                        {
                                            <br />
                                            <strong class="text-danger">$@product.DiscountPrice.Value.ToString("F2")</strong>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (product.Sizes != null && product.Sizes.Any())
                                    {
                                        <div class="sizes-info">
                                            @foreach (var size in product.Sizes.Take(3))
                                            {
                                                <span class="badge badge-secondary mr-1">
                                                    @size.Size: @size.QuantityInStock
                                                </span>
                                            }
                                            @if (product.Sizes.Count > 3)
                                            {
                                                <span class="badge badge-light">+@(product.Sizes.Count - 3) more</span>
                                            }
                                        </div>
                                        <small class="text-muted">
                                            Total: @product.Sizes.Sum(s => s.QuantityInStock) items
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-danger">No sizes</span>
                                    }
                                </td>
                                <td>
                                    @if (product.IsActive)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">
                                            <i class="fas fa-times-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="badges-container">
                                        @if (product.IsNewArrival)
                                        {
                                            <span class="badge badge-info mr-1">
                                                <i class="fas fa-star"></i> New
                                            </span>
                                        }
                                        @if (product.IsBestseller)
                                        {
                                            <span class="badge badge-warning">
                                                <i class="fas fa-fire"></i> Best
                                            </span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("EditProduct", "Admin", new { id = product.Id })" 
                                           class="btn btn-sm btn-outline-primary" title="Edit Product">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-info" 
                                                onclick="viewProductDetails(@product.Id)" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <form method="post" action="@Url.Action("DeleteProduct", "Admin")" 
                                              style="display: inline;" 
                                              onsubmit="return confirm('Are you sure you want to delete this product? This action cannot be undone.')">
                                            <input type="hidden" name="id" value="@product.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Product">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state text-center">
                <div class="empty-state-icon mb-4">
                    <i class="fas fa-box-open" style="font-size: 4rem; color: #667eea;"></i>
                </div>
                <h3>No Products Found</h3>
                <p class="text-muted">You haven't added any products yet. Start by creating your first product.</p>
                <a href="@Url.Action("CreateProduct", "Admin")" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Your First Product
                </a>
            </div>
        }
    </div>
</div>

<!-- Product Details Modal -->
<div class="modal fade" id="productDetailsModal" tabindex="-1" role="dialog" aria-labelledby="productDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productDetailsModalLabel">Product Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="productDetailsContent">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewProductDetails(productId) {
            // Load product details via AJAX
            $.get('@Url.Action("ProductDetails", "Admin")', { id: productId }, function(data) {
                $('#productDetailsContent').html(data);
                $('#productDetailsModal').modal('show');
            });
        }
        
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

