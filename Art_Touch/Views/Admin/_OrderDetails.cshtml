@model DAL.Data.Models.Order

<div class="row">
    <div class="col-md-6">
        <h6>Order Information</h6>
        <table class="table table-sm">
            <tr>
                <td><strong>Order ID:</strong></td>
                <td>#@Model.Id</td>
            </tr>
            <tr>
                <td><strong>Order Date:</strong></td>
                <td>@Model.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
            </tr>
            <tr>
                <td><strong>Status:</strong></td>
                <td>
                    <span class="badge badge-@(Model.Status switch {
                        DAL.Data.Models.OrderStatus.Pending => "warning",
                        DAL.Data.Models.OrderStatus.Shipped => "info",
                        DAL.Data.Models.OrderStatus.Completed => "success",
                        DAL.Data.Models.OrderStatus.Cancelled => "danger",
                        _ => "secondary"
                    })">
                        @Model.Status
                    </span>
                </td>
            </tr>
            <tr>
                <td><strong>Total Amount:</strong></td>
                <td>$@Model.TotalAmount.ToString("F2")</td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        <h6>Customer Information</h6>
        <table class="table table-sm">
            <tr>
                <td><strong>Name:</strong></td>
                <td>@Model.User?.FirstName @Model.User?.LastName</td>
            </tr>
            <tr>
                <td><strong>Email:</strong></td>
                <td>@Model.User?.Email</td>
            </tr>
            <tr>
                <td><strong>Phone:</strong></td>
                <td>@Model.User?.PhoneNumber</td>
            </tr>
        </table>
        
        <h6>Shipping Address</h6>
        <p class="text-muted">@Model.ShippingAddress</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <h6>Order Items</h6>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Size</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Product?.Name</td>
                            <td>@item.Size</td>
                            <td>@item.Quantity</td>
                            <td>$@item.UnitPrice.ToString("F2")</td>
                            <td>$@item.Price.ToString("F2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="text-right"><strong>Total:</strong></td>
                        <td><strong>$@Model.TotalAmount.ToString("F2")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div> 