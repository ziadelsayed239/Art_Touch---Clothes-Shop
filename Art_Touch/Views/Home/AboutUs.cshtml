@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

<!-- About Hero Section -->
<section class="about-hero-section" style="background: linear-gradient(135deg, #fce4ec, #f8bbd9); padding: 100px 0; text-align: center;">
    <div class="container">
        <h1 style="font-size: 48px; font-weight: bold; color: #333; margin-bottom: 20px;">About Art Touch</h1>
                    <p style="font-size: 18px; color: #666; max-width: 600px; margin: 0 auto;">Your premier destination for artistic women's fashion, where style meets sophistication.</p>
    </div>
</section>

<!-- Our Story Section -->
<section style="padding: 80px 0;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 style="font-size: 36px; font-weight: bold; color: #333; margin-bottom: 30px;">Our Story</h2>
                <p style="font-size: 16px; color: #666; line-height: 1.8; margin-bottom: 20px;">
                    Founded with a passion for timeless elegance, Art Touch has been at the forefront of women's fashion since our inception. 
                    We believe that every woman deserves to feel confident and beautiful in her own skin.
                </p>
                <p style="font-size: 16px; color: #666; line-height: 1.8; margin-bottom: 20px;">
                    Our carefully curated collections blend contemporary trends with classic sophistication, ensuring that each piece 
                    not only looks stunning but also feels comfortable and empowering to wear.
                </p>
                <p style="font-size: 16px; color: #666; line-height: 1.8;">
                    From casual everyday wear to special occasion dresses, we offer a diverse range of styles that cater to the modern woman's 
                    dynamic lifestyle and evolving fashion preferences.
                </p>
            </div>
            <div class="col-md-6">
                <img src="/images/about-story.jpg" alt="Our Story" style="width: 100%; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.1);" />
            </div>
        </div>
    </div>
</section>

<!-- Our Values Section -->
<section style="padding: 80px 0; background: #f8f9fa;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 style="font-size: 36px; font-weight: bold; color: #333; margin-bottom: 15px;">Our Values</h2>
            <p style="font-size: 16px; color: #666; max-width: 600px; margin: 0 auto;">The principles that guide everything we do</p>
        </div>
        
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div style="background: white; padding: 40px 20px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.1); height: 100%;">
                    <i class="fas fa-heart" style="font-size: 48px; color: #e91e63; margin-bottom: 20px;"></i>
                    <h3 style="font-size: 24px; font-weight: bold; color: #333; margin-bottom: 15px;">Quality</h3>
                    <p style="font-size: 16px; color: #666; line-height: 1.6;">
                        We never compromise on quality. Every piece in our collection is crafted with premium materials and attention to detail.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4 text-center mb-4">
                <div style="background: white; padding: 40px 20px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.1); height: 100%;">
                    <i class="fas fa-star" style="font-size: 48px; color: #e91e63; margin-bottom: 20px;"></i>
                    <h3 style="font-size: 24px; font-weight: bold; color: #333; margin-bottom: 15px;">Elegance</h3>
                    <p style="font-size: 16px; color: #666; line-height: 1.6;">
                        Our designs embody timeless elegance, creating pieces that transcend seasons and trends.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4 text-center mb-4">
                <div style="background: white; padding: 40px 20px; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.1); height: 100%;">
                    <i class="fas fa-users" style="font-size: 48px; color: #e91e63; margin-bottom: 20px;"></i>
                    <h3 style="font-size: 24px; font-weight: bold; color: #333; margin-bottom: 15px;">Community</h3>
                    <p style="font-size: 16px; color: #666; line-height: 1.6;">
                        We celebrate diversity and inclusivity, creating fashion that empowers women of all backgrounds and styles.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

