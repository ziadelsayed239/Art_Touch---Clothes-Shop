@model List<DAL.Data.Models.Product>

@{
    ViewData["Title"] = ViewBag.CategoryName;
    Layout = "~/Views/Shared/_ShopLayout.cshtml";

}

<section class="container my-5">
    <h2 class="mb-4">@ViewBag.CategoryName</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            var coverImage = product.Images.FirstOrDefault(img => img.IsCover)?.ImageUrl ?? "/images/placeholder.png";
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@coverImage" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@product.Name" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">
                            @if (product.DiscountPrice.HasValue)
                            {
                                <span class="text-muted text-decoration-line-through me-1">@product.OriginalPrice.ToString("C")</span>
                                <span class="text-danger fw-bold">@product.DiscountPrice.Value.ToString("C")</span>
                            }
                            else
                            {
                                <span class="fw-bold">@product.OriginalPrice.ToString("C")</span>
                            }
                        </p>
                        <div >
                            <a href="@Url.Action("ProductDetails", "Shop", new { id = product.Id })" class="btn-view-details">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

